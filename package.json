{
  "name": "modern-nextjs-directory-template",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "private": true,
  "scripts": {
    "clean": "rm -rf .next next-env.d.ts",
    "clean:all": "npm run clean && rm -rf node_modules coverage playwright-report test-results tsconfig.tsbuildinfo",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:clean": "npm run clean && npm run build && npm run start",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "perf:e2e": "bash scripts/perf-e2e.sh && node scripts/run-lighthouse.mjs",
    "perf:compare": "node scripts/compare-perf.mjs",
    "perf:baseline": "UPDATE_PERF_BASELINE=1 node scripts/compare-perf.mjs",
    "perf:check": "npm run build && start-server-and-test start http://localhost:3000 perf:e2e && npm run perf:compare",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "security:audit": "npm audit --audit-level=high",
    "security:sbom": "mkdir -p build/reports && cyclonedx-npm --ignore-npm-errors --output-format JSON --output-file build/reports/bom.json",
    "postinstall": "lefthook install"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "awesome-phonenumber": "^7.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@playwright/test": "^1.58.1",
    "@storybook/nextjs-vite": "^10.2.6",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "babel-plugin-react-compiler": "1.0.0",
    "happy-dom": "^20.5.0",
    "lefthook": "^2.1.0",
    "lighthouse": "^13.0.1",
    "start-server-and-test": "^2.1.3",
    "storybook": "^10.2.6",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "not dead",
    "not ie 11"
  ]
}
