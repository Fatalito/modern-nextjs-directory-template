    "@vitest/coverage-v8": "^4.0.18",
    "@vitejs/plugin-react": "^5.1.2",
    "babel-plugin-react-compiler": "1.0.0",
    "happy-dom": "^20.4.0",
    "lefthook": "^2.0.16",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "@cyclonedx/cyclonedx-npm": {
      "js-yaml": "^4.1.0",
      "libxmljs2": "^0.36.0",
      "tar": "^7.5.7"
    }
  }
