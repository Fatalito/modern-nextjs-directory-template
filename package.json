{
  "name": "modern-nextjs-directory-template",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "security:audit": "npm audit --audit-level=high",
    "security:sbom": "mkdir -p build/reports && cyclonedx-npm --ignore-npm-errors --output-format JSON --output-file build/reports/bom.json",
    "infra:check": "npm run lint && npm run security:audit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "perf:compare": "node scripts/compare-perf.mjs",
    "perf:baseline": "UPDATE_PERF_BASELINE=1 node scripts/compare-perf.mjs",
    "postinstall": "lefthook install",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "awesome-phonenumber": "^7.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.563.0",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@playwright/test": "^1.58.1",
    "@storybook/nextjs-vite": "^10.2.4",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "babel-plugin-react-compiler": "1.0.0",
    "happy-dom": "^20.4.0",
    "lefthook": "^2.0.16",
    "storybook": "^10.2.4",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
