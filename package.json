{
  "name": "modern-nextjs-directory-template",
  "version": "0.1.0",
  "description": "A modern, scalable Next.js directory template built with Feature-Sliced Design, Drizzle ORM, and React 19.",
  "keywords": [
    "nextjs",
    "directory",
    "template",
    "feature-sliced-design",
    "drizzle-orm",
    "react19",
    "tailwindcss",
    "typescript"
  ],
  "license": "Apache-2.0",
  "private": true,
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "clean": "rm -rf .next next-env.d.ts",
    "clean:all": "npm run clean && rm -rf node_modules coverage playwright-report test-results tsconfig.tsbuildinfo",
    "db:decrypt-snapshot": "bash scripts/db-decrypt-snapshot.sh",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:seed": "tsx src/shared/api/db/seed.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:clean": "npm run clean && npm run build && npm run start",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:actions": "actionlint",
    "lint:fix": "biome check --write .",
    "lint:env": "dotenv-linter .env.example",
    "lint:md": "markdownlint-cli2",
    "lint:shell": "shellcheck -x scripts/**/*.sh",
    "test": "npm run test:unit",
    "test:debug": "DEBUG_SQL=true npm run test:unit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "perf:e2e": "start-server-and-test start http://localhost:3000 'BASE_URL=http://localhost:3000 bash scripts/perf-e2e.sh && node scripts/run-lighthouse.mjs'",
    "perf:lighthouse": "start-server-and-test start http://localhost:3000 'node scripts/run-lighthouse.mjs' && npm run perf:lighthouse:compare",
    "perf:lighthouse:compare": "node scripts/compare-lighthouse.mjs",
    "perf:lighthouse:baseline": "UPDATE_LIGHTHOUSE_BASELINE=1 node scripts/compare-lighthouse.mjs",
    "perf:compare": "node scripts/compare-perf.mjs",
    "perf:baseline": "UPDATE_PERF_BASELINE=1 node scripts/compare-perf.mjs",
    "perf:check": "npm run build && npm run perf:e2e && npm run perf:compare && npm run perf:lighthouse:compare",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "security:audit": "npm audit --audit-level=high",
    "security:sbom": "mkdir -p build/reports && cyclonedx-npm --ignore-npm-errors --output-format JSON --output-file build/reports/bom.json",
    "infra:setup": "bash scripts/infra/setup.sh",
    "infra:setup:db": "bash scripts/infra/turso-setup.sh",
    "infra:teardown": "bash scripts/infra/teardown.sh",
    "infra:teardown:db": "bash scripts/infra/turso-teardown.sh",
    "infra:rotate-token": "bash scripts/infra/turso-rotate-token.sh",
    "infra:sync:github": "bash scripts/infra/sync-github-env.sh",
    "postinstall": "[ -n \"$CI\" ] || lefthook install"
  },
  "dependencies": {
    "@libsql/client": "^0.17.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-nextjs": "^0.13.10",
    "awesome-phonenumber": "^7.8.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwind-merge": "^3.5.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@cyclonedx/cyclonedx-npm": "^4.1.2",
    "@playwright/test": "^1.58.2",
    "@storybook/addon-mcp": "^0.3.3",
    "@storybook/nextjs-vite": "^10.2.13",
    "@tailwindcss/postcss": "^4.2.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "babel-plugin-react-compiler": "1.0.0",
    "drizzle-kit": "^0.31.9",
    "happy-dom": "^20.7.0",
    "lefthook": "^2.1.1",
    "lighthouse": "^13.0.3",
    "markdownlint-cli2": "^0.21.0",
    "shellcheck": "^4.1.0",
    "start-server-and-test": "^2.1.5",
    "storybook": "^10.2.13",
    "tailwindcss": "^4.2.1",
    "tsx": "^4.21.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vercel": "^50.25.4",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "@esbuild-kit/core-utils": {
      "esbuild": "^0.25.0"
    },
    "tar": "^7.5.8",
    "minimatch": "^10.2.1",
    "ajv": "^8.18.0",
    "undici": "^6.21.2",
    "path-to-regexp": "^6.3.0"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    "not dead"
  ]
}
